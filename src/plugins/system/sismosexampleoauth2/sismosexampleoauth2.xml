<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>plg_system_sismosexampleoauth2</name>
	<version>1.0.0-alpha</version>
	<creationDate>2025-09</creationDate>
	<author>Martina Scholz</author>
	<authorEmail>support@simplysmart-it.de</authorEmail>
	<authorUrl>https://simplysmart-it.de</authorUrl>
	<copyright>(C) 2025, SimplySmart-IT - Martina Scholz</copyright>
	<description>PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_XML_DESCRIPTION</description>
	<namespace path="src">SiSmOS\Plugin\System\Sismosexampleoauth2</namespace>
	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>
	<!-- Plugin files -->
	<files>
		<folder>language</folder>
		<folder plugin="sismosexampleoauth2">services</folder>
		<folder>src</folder>
	</files>
	<media destination="plg_system_sismosexampleoauth2" folder="media">
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="SiSmOS\Plugin\System\Sismosexampleoauth2\Field">
				<field
					name="base_url"
					type="url"
					required="true"
					label="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_BASE_URL"
					description="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_BASE_URL_DESC"
				/>
				<field
					name="public_key"
					type="text"
					label="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_PUBLIC_KEY"
					description="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_PUBLIC_KEY_DESC"
				/>
				<field
					name="secret_key"
					type="password"
					default=""
					filter="raw"
					label="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_SECRET_KEY"
					description="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_SECRET_KEY_DESC"
				/>
				<field
					name="log_on"
					type="radio"
					default="1"
					label="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_LOG_ON"
					description="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_LOG_ON_DESC"
					class="btn-group btn-group-yesno">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="token"
					type="Token"
					default=""
					readonly="true"
					label="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_TOKEN_LABEL"
					description="PLG_SYSTEM_SISMOSEXAMPLEOAUTH2_TOKEN_DESC"
				/>
			</fieldset>
		</fields>
	</config>
	<!-- Changelog -->
	<!-- <changelogurl>https://simplysmart-it.de/plg_system_sismosexampleoauth2/changelog.xml</changelogurl> -->
	<!-- Update servers -->
	<!-- <updateservers>
		<server type="extension" priority="1" name="Update Site">https://simplysmart-it.de/plg_system_sismosexampleoauth2/update.xml</server>
	</updateservers> -->
</extension>
